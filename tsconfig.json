{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                 
    "outDir": "./build",       
    "lib": [
      "ES2020",
      "DOM"
    ],
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true                            
  }
}
